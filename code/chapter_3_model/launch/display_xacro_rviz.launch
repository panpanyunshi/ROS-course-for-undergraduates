<launch>
    <!-- 将 urdf 文件内容设置进参数服务器 -->
    <!-- <param name="robot_description" textfile="$(find chapter_3_model)/urdf/my_car_base_rviz.urdf" /> -->
    <param name="robot_description" command="$(find xacro)/xacro.py $(find chapter_3_model)/xacro/my_base_camera_laser.urdf.xacro" />
    <!-- 启动 rivz -->
    <node pkg="rviz" type="rviz" name="rviz_test" args="-d $(find chapter_3_model)/config/hello.rviz" required="true" />

    <!-- 启动机器人状态和关节状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
    <!-- <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" /> -->

    <!-- 启动图形化的控制关节运动节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

</launch>
